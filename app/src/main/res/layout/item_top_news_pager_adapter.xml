<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewTopNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:foreground="@color/colorImageForeground"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:background="@drawable/top_lable_shape"
        android:layout_height="@dimen/top_label_height"
        android:layout_marginTop="@dimen/top_label_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_marginLeft="@dimen/top_label_icon_left_margin"
            android:layout_gravity="center"
            android:background="@drawable/ic_top_label"
            android:layout_width="@dimen/top_label_icon_size"
            android:layout_height="@dimen/top_label_icon_size" />

        <TextView
            android:layout_marginLeft="@dimen/top_label_text_left_margin"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/top_label_text_size"
            android:text="TOP"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/descriptionTopNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_text"
            android:textStyle="bold"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/descriptionTopNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:textSize="@dimen/small_text_size"
                android:id="@+id/source"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@android:color/darker_gray"
                android:paddingTop="@dimen/margin_10dp"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/dateTopNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>