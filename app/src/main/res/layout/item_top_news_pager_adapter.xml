<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@android:drawable/radiobutton_off_background"
        android:id="@+id/imageViewTopNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:foreground="@color/colorImageForeground"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:background="@drawable/top"
        android:layout_height="36dp"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_name"
            android:layout_width="18dp"
            android:layout_height="18dp" />

        <TextView
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:text="TOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/descriptionTopNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/largeText"
            android:textStyle="bold"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/descriptionTopNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView

                android:textSize="@dimen/smallTextSize"
                android:id="@+id/source"
                android:textColorLink="@color/colorAccent"
                android:autoLink="web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@android:color/darker_gray"
                android:paddingTop="10dp"
                android:textSize="@dimen/smallTextSize"
                android:id="@+id/dateTopNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>